extends layout

block content
  h1= title
  div(class='div-writeup') 
    p= writeup
  div(class='div-sim', style=`--numRows:${numRows}; --numCols:${numCols}; --gridHeight:${gridHeight}; --colWidth:${colWidth};`)
    each cell in grid
      div(class='sim-cell')
        if cell.vacuumPresent
          div(class='vacuum')
            p vacuum

        if cell.dirtPresent
          div(class='dirty')
            p dirty
        else
          div(class='clean')
            p clean
